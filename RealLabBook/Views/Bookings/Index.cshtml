@model IEnumerable<RealLabBook.Models.Booking>
@{
    ViewData["Title"] = "Booking";
    var quan = ViewData["ListQuan"] as List<int>;
}
@section JavaScript
{
    <script>
        var lablint = false;
    </script>
    <script type="text/javascript" src="@Url.Content("~/js/time-card.js")"></script>

}
<div class="sel-wrapper">

    <div class="topic">Select Booking Time</div>
    <div class="select">
        <div class="sel-date">

            <div class="input-wrapper">
                <label class="label">Date</label>
                <input class="input" id="dateinput" type="date" />
            </div>
            <a id="asearch"><button class="sel-btn" id="sel-search">SEARCH</button></a>
            @using System.Security.Claims;
            @{
                
                    <input class="input hide" type="hidden" id="userinput" value="@(Context.User.Claims.Where(claim => claim.Type ==
ClaimTypes.Email).FirstOrDefault().Value)" />
                
                <div class="input-wrapper">
                    <label class="label">Equity</label>
                    <input class="input" type="number" min="1" id="eqtinput" />
                </div>
                }

                <a id="abook"><button class="sel-btn" id="sel-book">BOOK</button></a>
            </div>
        <div class="sel-hour">
            <div class="title-hour">Select Time interval</div>
            <div class="card-container">
                <time-card no="1"
                           hour="8.00"
                           e_hour="9.00"
                           vol=@quan[0] 
                           enough="false"
                           id="card1"
                           select="false"></time-card>
                <time-card id="card2"
                           select="false"
                           hour="9.00"
                           e_hour="10.00"
                           vol=@quan[1] 
                           enough="false"></time-card>
                <time-card id="card3"
                           select="false"
                           hour="10.00"
                           e_hour="11.00"
                           vol=@quan[2] 
                           enough="false"></time-card>
                <time-card id="card4"
                           select="false"
                           hour="11.00"
                           e_hour="12.00"
                           vol=@quan[3] 
                           enough="false"></time-card>
                <time-card id="card5"
                           select="false"
                           hour="12.00"
                           e_hour="13.00"
                           vol=@quan[4] 
                           enough="false"></time-card>
                <time-card id="card6"
                           select="false"
                           hour="13.00"
                           e_hour="14.00"
                           vol=@quan[5] 
                           enough="false"></time-card>
                <time-card id="card7"
                           select="false"
                           hour="14.00"
                           e_hour="15.00"
                           vol=@quan[6] 
                           enough="false"></time-card>
                <time-card id="card8"
                           select="false"
                           hour="15.00"
                           e_hour="16.00"
                           vol=@quan[7] 
                           enough="false"></time-card>
            </div>
        </div>
    </div>
</div>





