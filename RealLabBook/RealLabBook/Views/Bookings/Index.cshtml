@model IEnumerable<RealLabBook.Models.Booking>
@{
    ViewData["Title"] = "Booking";
    var quan = ViewData["ListQuan"] as List<int>;
}
@section JavaScript
{
    <script>
        var lablint = false;
    </script>
    <script type="text/javascript" src="@Url.Content("~/js/time-card.js")"></script>

}


<div class="sel-wrapper">

    <div class="topic">Select Booking Time</div>
    <div class="select">
        <div class="sel-date">
            <div class="input-wrapper">
                <label class="label">User</label>
                <input class="input" type="text" id="userinput" />
            </div>
            <div class="input-wrapper">
                <label class="label">Date</label>
                <input class="input" id="dateinput" type="date" />
            </div>
            <div class="input-wrapper">
                <label class="label">Equity</label>
                <input class="input" type="number" min="1" id="eqtinput" />
            </div>
            <a id ="asearch"><button class="sel-btn" id="sel-search">SEARCH</button></a>
            <button class="sel-btn" id="sel-book">BOOK</button>
        </div>
        <div class="sel-hour">
            <div class="title-hour">Select Time interval</div>
            <div class="card-container">
                <time-card no="1"
                           hour="8.00"
                           e_hour="9.00"
                           vol=@quan[0] 
                           enough="false"
                           id="card1"
                           select="false"></time-card>
                <time-card id="card2"
                           select="false"
                           hour="9.00"
                           e_hour="10.00"
                           vol=@quan[1] 
                           enough="false"></time-card>
                <time-card id="card3"
                           select="false"
                           hour="10.00"
                           e_hour="11.00"
                           vol=@quan[2] 
                           enough="false"></time-card>
                <time-card id="card4"
                           select="false"
                           hour="11.00"
                           e_hour="12.00"
                           vol=@quan[3] 
                           enough="false"></time-card>
                <time-card id="card5"
                           select="false"
                           hour="12.00"
                           e_hour="13.00"
                           vol=@quan[4] 
                           enough="false"></time-card>
                <time-card id="card6"
                           select="false"
                           hour="13.00"
                           e_hour="14.00"
                           vol=@quan[5] 
                           enough="false"></time-card>
                <time-card id="card7"
                           select="false"
                           hour="14.00"
                           e_hour="15.00"
                           vol=@quan[6] 
                           enough="false"></time-card>
                <time-card id="card8"
                           select="false"
                           hour="15.00"
                           e_hour="16.00"
                           vol=@quan[7] 
                           enough="false"></time-card>
            </div>
        </div>
    </div>
    <div>
        <table class="table">
            @foreach (var item in (List<int>)ViewData["ListQuan"])
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
             }
        </table>
        </div>
    <div>
        <h1>Index</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ToolID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.start_time)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ToolID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.start_time)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BookingID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.BookingID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.BookingID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





